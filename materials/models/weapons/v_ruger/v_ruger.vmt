"VertexlitGeneric"
{
	"$basetexture" "models/weapons/v_ruger/v_ruger"
	"$bumpmap" "models/weapons/v_ruger/v_ruger_normal"

 	"$envmap" "env_cubemap"
	"$envmaptint" "[.3 .3 .3]"
   	"$envmapsaturation" .5
	
	//"$normalmapalphaenvmapmask" "1"
	
  	"$model" 1

	"$phong" "1"
	"$phongexponent" "40"
	"$phongboost"    "1"
	"$phongfresnelranges"	"[2 5 2]"
	
	// Blood effects
	$detail "models/blood.vtf"
	$detailscale "1.8"
	$detailblendfactor .001
	$detailblendmode 0
	$detailAmount 0
	Proxies
	{
		WeaponBlood
		{
			resultVar $detailAmount
		}
		Equals
		{
			srcVar1 $detailAmount
			resultVar $detailblendfactor			
		}
	}
}
