"VertexlitGeneric"
{
	
	"$basetexture" "models/weapons/v_railgun/details"

	$envmap env_cubemap
	$envmaptint "[.01 .01 .01]"
	"$envmapcontrast" 1
	"$envmapsaturation" .1


	// Blood effects
	$detail "models/blood.vtf"
	$detailscale "1.8"
	$detailblendfactor .001
	$detailblendmode 0
	$detailAmount 0
	Proxies
	{
		WeaponBlood
		{
			resultVar $detailAmount
		}
		Equals
		{
			srcVar1 $detailAmount
			resultVar $detailblendfactor			
		}
	}
}
