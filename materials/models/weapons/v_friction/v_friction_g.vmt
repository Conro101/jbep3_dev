"VertexlitGeneric"
{
	"$basetexture" "models/weapons/v_friction/v_friction_g"
	"$translucent" 1
	"$envmap" "env_cubemap"
	"$envmapcontrast" 1
	"$envmapsaturation" .7
	"$envmaptint" "[ .8 .8 .8 ]"
	
	// Blood effects
	$detail "models/blood.vtf"
	$detailscale "1.8"
	$detailblendfactor .001
	$detailblendmode 0
	$detailAmount 0
	Proxies
	{
		WeaponBlood
		{
			resultVar $detailAmount
		}
		Equals
		{
			srcVar1 $detailAmount
			resultVar $detailblendfactor			
		}
	}
}
